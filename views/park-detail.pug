extends layout
block content
    h3= park.parkName
    div
        ul
            li Location: #{park.city}, #{park.providenceState} #{park.country}
            li Opened: #{park.opened}
            li Size: #{park.size}
    div
        p= park.description
    div
        a(href=`/park/edit/${park.id}` role='button' class='btn btn-success') Edit
        a(href=`/park/delete/${park.id}` role='button' class='btn btn-success') Delete
        a(href=`/parks` role='button' class='btn btn-success') Return
